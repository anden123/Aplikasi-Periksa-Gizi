<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/bgutama"  >

    <Button 
        android:id="@+id/buttonTambahBiodata" 
        android:layout_width="186dp" 
        android:layout_height="wrap_content" 
        android:layout_gravity="center" 
        android:text="Tambah Biodata" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTambahBiodata"
        android:layout_below="@+id/buttonTambahBiodata"
        android:layout_marginTop="38dp" >

        <ScrollView
            android:id="@+id/verticalScrollView"
            android:layout_width="22dp"
            android:layout_height="match_parent" >

            <TableLayout
                android:id="@+id/tableBiodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TableLayout>
        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>